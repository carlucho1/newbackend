<div class="container-fluid" style="background-color: coral; height: auto;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">


            <h1 class="text-center text-dark p-2 mt-4">Baja de Productos</h1>

           {{#each data}}
        
             <form action="/autos/delete/{{id}}" method="post" enctype="multipart/form-data">

                <div class="form-group my-3">
                        <label for="exampleFormControlFile1">Imagen</label>
                        <input type="file" class="form-control" id="exampleFormControlFile1" name="urlImage" disabled>
                        <label for="" class="text-white mt-2">{{urlImage}}</label>

                        <img src="{{urlImage}}" class="mt-2" style="width: 100%;" alt="" >
                </div>

                <div class="form-group my-3">
                    <label for="formGroupExampleInput">Descripci√≥n</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su nombre" name="descripcion" value="{{descripcion}}" disabled>
                </div>

                <div class="form-group my-3">
                    <label for="formGroupExampleInput2">Precio</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Ingrese el detalle de la Obra" name="precio"  value="{{precio}}" disabled>
                </div>

                {{!-- <div class="form-group">
                    <label for="formGroupExampleInput3">Autor</label>
                    <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Autor de la Obra" name="autor" value="{{autor}}" disabled>
                </div> --}}

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-secondary btn-block mt-5">Delete</button>

                    <a href="/autos/listado" class="btn btn-secondary btn-block mt-4 mb-4">Retornar</a>
                </div>
            </form>   

            {{/each}}  

        </div>
    </div>
</div>
